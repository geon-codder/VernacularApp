<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".home.sub.SubBab6Activity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="@color/text_color"
        android:textAlignment="center"
        android:layout_marginTop="60dp"
        android:text="SUB BAB 6"/>

    <Button
        android:id="@+id/btnMenyimak6"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:backgroundTint="@color/button_color"
        android:textColor="@color/text_white"
        android:text="MENYIMAK"
        android:textSize="20sp"
        />
    <Button
        android:id="@+id/btnBerbicara6"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/button_color"
        android:textColor="@color/text_white"
        android:text="BERBICARA"
        android:textSize="20sp"
        />
    <Button
        android:id="@+id/btnMembaca6"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/button_color"
        android:textColor="@color/text_white"
        android:text="MEMBACA"
        android:textSize="20sp"
        />
    <Button
        android:id="@+id/btnMenulis6"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/button_color"
        android:textColor="@color/text_white"
        android:text="MENULIS"
        android:textSize="20sp"
        />

</LinearLayout>